{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2015",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017"],

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    
    /* JavaScript Support */
    "downlevelIteration": true,
    "noEmitOnError": false,
    
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}